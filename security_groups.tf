#------------------------security-groups-------------------------------------------------

resource "aws_security_group" "i-m-web_sg" {
  name        = "Dynamic Security Group"
  description = "Dynamic Security Group for asg website"
  vpc_id      = aws_vpc.i_m_web.id

  dynamic "ingress" {
    for_each = var.ports
    content {
      from_port   = ingress.value
      to_port     = ingress.value
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  tags = {
    Name = "I_M_DYNAMIC_SG"
  }
}

variable "ports" {
  type    = list
  default = ["80", "443", "22", "9100"]
}

